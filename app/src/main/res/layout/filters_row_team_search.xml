<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
  <data>
    <variable
        name="filter"
        type="com.benoitquenaudon.tvfoot.red.app.domain.matches.filters.FiltersItemDisplayable.TeamSearchInputDisplayable"
        />
    <variable
        name="handler"
        type="com.benoitquenaudon.tvfoot.red.app.domain.matches.filters.FiltersAdapter"
        />
  </data>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:showDividers="middle"
      >
    <EditText
        android:id="@+id/filter_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_search_gray_24px"
        android:hint="@string/team_search_input_hint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="1"
        android:onTextChanged="@{handler::onSearchInputChanged}"
        />
  </LinearLayout>
</layout>
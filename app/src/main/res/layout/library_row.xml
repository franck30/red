<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="library"
        type="com.benoitquenaudon.tvfoot.red.app.domain.libraries.Library"
        />
    <variable
        name="handler"
        type="com.benoitquenaudon.tvfoot.red.app.domain.libraries.LibrariesAdapter"
        />
  </data>
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      card_view:cardCornerRadius="4dp"
      card_view:cardElevation="2dp"
      card_view:cardUseCompatPadding="true"
      >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        >
      <ImageView
          android:id="@+id/library_image"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="12dp"
          android:layout_marginTop="12dp"
          android:padding="4dp"
          android:src="@drawable/avatar_placeholder"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
      <TextView
          android:id="@+id/library_name"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="12dp"
          android:layout_marginStart="12dp"
          android:layout_marginTop="12dp"
          android:text="@{library.name}"
          android:textColor="@color/colorAccentDark"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/library_image"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="OkHttp"
          />
      <TextView
          android:id="@+id/library_description"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="12dp"
          android:layout_marginStart="12dp"
          android:layout_marginTop="4dp"
          android:text="@{library.description}"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/library_image"
          app:layout_constraintTop_toBottomOf="@+id/library_name"
          tools:text="An HTTP &amp; HTTP/2 client for Android and Java applications."
          />
      <Button
          android:id="@+id/library_link"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/library_description"
          android:onClick="@{() -> handler.onClick(library)}"
          android:text="@string/library_link_label"
          android:textColor="#8a000000"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/library_description"
          style="?android:borderlessButtonStyle"
          />
    </android.support.constraint.ConstraintLayout>
  </android.support.v7.widget.CardView>
</layout>
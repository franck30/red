<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="team"
        type="com.benoitquenaudon.tvfoot.red.app.domain.matches.filters.FiltersItemDisplayable.TeamSearchResultDisplayable"
        />
    <variable
        name="handler"
        type="com.benoitquenaudon.tvfoot.red.app.domain.matches.filters.FiltersAdapter"
        />
  </data>
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="6dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="0dp"
      android:foreground="?attr/selectableItemBackground"
      android:onClick="@{() -> handler.onSearchTeamSelected(team)}"
      >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_light_shape"
        android:paddingBottom="2dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="2dp"
        >
      <TextView
          android:id="@+id/filter_team_result_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="1"
          android:text="@{team.name}"
          android:textColor="@color/colorPrimary"
          android:textSize="14sp"
          app:layout_constraintBottom_toTopOf="@+id/filter_team_result_fullname"
          app:layout_constraintEnd_toStartOf="@+id/filter_team_result_add"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="Paris SG"
          />
      <TextView
          android:id="@+id/filter_team_result_fullname"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="1"
          android:text="@{team.fullName}"
          android:textColor="@color/colorPrimaryLight"
          android:textSize="12sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/filter_team_result_add"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/filter_team_result_name"
          tools:text="Paris-Saint-Germain Football Club"
          />
      <ImageView
          android:id="@+id/filter_team_result_add"
          android:layout_width="18dp"
          android:layout_height="18dp"
          android:layout_marginEnd="8dp"
          android:layout_marginStart="8dp"
          android:rotation="45"
          android:tint="@color/colorGrayDark"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/ic_close_black_24px"
          />
    </android.support.constraint.ConstraintLayout>
  </FrameLayout>
</layout>